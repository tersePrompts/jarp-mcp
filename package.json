{
    "name": "jarp-mcp",
    "version": "1.0.4",
    "description": "MCP server that gives AI agents instant access to decompiled Java code from Maven/Gradle dependencies. Blazing fast Java class analysis for Claude, Cursor, and other LLM-powered IDEs.",
    "main": "dist/index.js",
    "bin": {
        "jarp-mcp": "dist/cli.js"
    },
    "type": "module",
    "files": [
        "dist/**/*",
        "lib/**/*",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "tsx src/index.ts",
        "test": "jest",
        "test:mcp": "python tests/run_tests.py",
        "test:ci": "npm run build && python tests/run_tests.py",
        "prepublishOnly": "npm run build",
        "prepack": "npm run build",
        "publish:npm": "npm publish",
        "publish:beta": "npm publish --tag beta",
        "version:patch": "npm version patch",
        "version:minor": "npm version minor",
        "version:major": "npm version major"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "java",
        "decompiler",
        "decompilation",
        "java-decompiler",
        "maven",
        "gradle",
        "claude",
        "cursor",
        "ai",
        "llm",
        "jarp",
        "spring",
        "spring-boot",
        "jar",
        "bytecode",
        "reverse-engineering",
        "class-analyzer",
        "dependency-analysis",
        "intellij",
        "vscode",
        "ai-assistant",
        "copilot",
        "anthropic"
    ],
    "author": "tersePrompts",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/tersePrompts/jarp-mcp.git"
    },
    "bugs": {
        "url": "https://github.com/tersePrompts/jarp-mcp/issues"
    },
    "homepage": "https://github.com/tersePrompts/jarp-mcp#readme",
    "engines": {
        "node": ">=16.0.0"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.25.3",
        "commander": "^14.0.2",
        "fs-extra": "^11.3.3",
        "xml2js": "^0.6.2",
        "archiver": "^7.0.1",
        "yauzl": "^3.2.0"
    },
    "devDependencies": {
        "@types/node": "^22.10.0",
        "@types/fs-extra": "^11.0.4",
        "@types/xml2js": "^0.4.14",
        "@types/archiver": "^6.0.2",
        "@types/yauzl": "^2.10.3",
        "typescript": "^5.7.0",
        "tsx": "^4.19.0",
        "jest": "^29.7.0",
        "@types/jest": "^29.5.13"
    }
}
